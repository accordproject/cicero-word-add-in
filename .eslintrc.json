{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "sourceType": "module",
      "ecmaVersion": 2018,
      "jsx": true
    }
  },
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "indent": ["error", 2],
    "object-curly-spacing": ["error", "always"],
    "no-multi-spaces": "error",
    "no-trailing-spaces": "error",
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
